<% admin_breadcrumb(t('spree.settings')) %>
<% admin_breadcrumb(I18n.t('spree.admin.tab.product_catalogs')) %>

<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :header_actions do %>
  <% if can?(:create, Spree::ProductCatalog) %>
    <li>
      <%= link_to new_object_url, id: 'admin_new_product_catalog_link', class: 'btn btn-primary' do %>
        <i class="fa fa-plus mr-2"></i>
        <span><%= I18n.t('spree.new_product_catalog') %></span>
      <% end %>
    </li>
  <% end %>
<% end %>

<%= paginate @product_catalogs, theme: 'solidus_admin' %>

<% if @product_catalogs.any? %>
  <table class='index' id='listing_product_catalogs' data-hook>
    <thead>
      <tr data-hook='product_catalogs_header'>
        <th>
          <%= sort_link @search,:name,
          Spree::ProductCatalog.human_attribute_name(:name),
          title: 'product_catalogs_order_by_name_title' %>
        </th>
        <th><%= t('spree.product_count') %></th>
        <th><%= Spree::ProductCatalog.human_attribute_name(:created_at) %></th>
        <th class='actions'></th>
      </tr>
    </thead>

    <tbody>
      <% @product_catalogs.each do |product_catalog| %>
        <tr id='<%= spree_dom_id product_catalog %>'
          data-hook='product_catalogs_row'>
          <td><%= product_catalog.name %></td>
          <td><%= product_catalog.item_ids.count %></td>
          <td><%= pretty_time(product_catalog.created_at) %></td>
          <td class='actions'>
            <% if can?(:update, product_catalog) %>
              <%= link_to edit_admin_product_catalog_path(product_catalog), class: 'btn btn-sm btn-secondary' do %>
                <i class="fa fa-pencil mr-2"></i>
                <%= I18n.t('spree.actions.edit') %>
              <% end %>
            <% end %>
            <% if can?(:destroy, product_catalog) %>
              <%= link_to admin_product_catalog_path(product_catalog), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-resource btn btn-sm btn-secondary' do %>
                <i class="fa fa-trash mr-2"></i>
                <%= I18n.t('spree.actions.delete') %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class='no-objects-found'>
    <%= render 'spree/admin/shared/no_objects_found',
                 resource: Spree::ProductCatalog,
                 new_resource_url: new_object_url %>
  </div>
<% end %>

<%= paginate @product_catalogs, theme: 'solidus_admin' %>
